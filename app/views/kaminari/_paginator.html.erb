<%# The container tag
  - available local variables
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
    paginator:     the paginator that renders the pagination tags inside
-%>
<%= paginator.render do -%>
  <nav class="join flex items-center justify-center space-x-1 text-2xl mt-5" role="navigation" aria-label="pager">
    <% each_page do |page| -%>
      <% if page.display_tag? -%>
        <button class="join-item btn text-[30px] text-gray-500 font-bold bg-yellow-200"><%= page_tag page %></button>
      <% elsif !page.was_truncated? -%>
        <%= gap_tag %>
      <% end -%>
    <% end -%>
  </nav>
<% end -%>

